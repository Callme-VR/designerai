generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model project {
  id        String   @id @unique @default(cuid())
  userId    String
  name      String
  theme     String?
  thumnails String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  frames    Frames[]
}

model Frames {
  id          String   @id @unique @default(cuid())
  title       String
  htmlContent String
  projectId   String
  project     project  @relation(fields: [projectId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
